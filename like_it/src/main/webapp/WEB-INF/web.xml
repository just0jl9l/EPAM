<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Like it</display-name>
  
  <welcome-file-list>
    <welcome-file>jsp/like_it.html</welcome-file>
    <welcome-file>jsp/like_it.htm</welcome-file>
    <welcome-file>jsp/like_it.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list> 
  
	<listener>
		<listener-class>by.trepam.like_it.listener.LikeItContextCreateListener</listener-class>
	</listener>
  
  <servlet>
    <description></description>
    <display-name>Controller</display-name>
    <servlet-name>Controller</servlet-name>
    <servlet-class>by.trepam.like_it.servlet.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/Controller</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Login</servlet-name>
    <jsp-file>/jsp/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>add_answer</servlet-name>
    <jsp-file>/jsp/add_answer.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>add_answer</servlet-name>
    <url-pattern>/add_answer</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>add_category</servlet-name>
    <jsp-file>/jsp/add_category.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>add_category</servlet-name>
    <url-pattern>/add_category</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>categories</servlet-name>
    <jsp-file>/jsp/categories.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>categories</servlet-name>
    <url-pattern>/categories</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>add_message</servlet-name>
    <jsp-file>/jsp/add_message.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>add_message</servlet-name>
    <url-pattern>/add_message</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>registration</servlet-name>
    <jsp-file>/jsp/registration.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/jsp/error.jsp</location>
  </error-page>
  
</web-app>