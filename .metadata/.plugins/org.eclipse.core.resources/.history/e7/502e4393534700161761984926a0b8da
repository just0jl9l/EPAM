public class Berth {

	private int id;
	private Warehouse portWarehouse;

	public Berth(int id, Warehouse warehouse) {
		this.id = id;
		portWarehouse = warehouse;
	}

	public int getId() {
		return id;
	}

	public boolean add(Warehouse shipWarehouse, int numberOfConteiners) throws InterruptedException {
		boolean result = false;
			
		boolean portLock = false;
		
//		synchronized (portWarehouse) {
//			synchronized (shipWarehouse) {
//				
//			}
//		}
		Lock portWarehouseLock = portWarehouse.getLock();//added
		Lock shipWarehouseLock = shipWarehouse.getLock();//added
		portWarehouseLock.lock();//added 
		shipWarehouseLock.lock();//added
		shipWarehouse.getContainer(numberOfConteiners);
		shipWarehouseLock.unlock();//added		
		portWarehouseLock.unlock();//added		
		
		return result;
		
	}
	
	

