<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout>
        <Pattern>%d{ABSOLUTE} [%-5p] (%F:%L) - %m%n</Pattern>
      </PatternLayout>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="STDOUT"/>
    </Root>
    <Logger name="by.trepam.multithreading.controller" level="WARN" additivity="false">
        <AppenderRef ref="STDOUT" level="WARN"/>
    </Logger>
  </Loggers>
</Configuration> 